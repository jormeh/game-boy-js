{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@classes/*": ["classes/*"],
      "@components/*": ["components/*"],
      "@context/*": ["context/*"],
      "@hooks/*": ["hooks/*"],
      "@ui/*": ["components/ui/*"],
      "@foregrounds/*": ["components/foregrounds/*"],
      "@icons/*": ["components/icons/*"],
      "@animations/*": ["components/animations/*"],
      "@assets/*": ["assets/*"],
      "@styles/*": ["styles/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
